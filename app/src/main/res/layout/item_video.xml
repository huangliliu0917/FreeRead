<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/img_video_main"
    android:orientation="vertical">


    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/jzPlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space200"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_video_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/img_touxiang" />

        <TextView
            android:id="@+id/tv_video_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="空城旧梦" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



        <TextView
            android:id="@+id/tv_video_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_pinglun"
            android:text="21"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/tv_video_fenxiang"
            android:src="@mipmap/icon_fontfenxiang"
            android:adjustViewBounds="true"
            android:layout_width="@dimen/space14"
            android:layout_height="@dimen/space24"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"/>


        <ImageView
            android:id="@+id/tv_video_more"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:adjustViewBounds="true"
            android:layout_width="@dimen/space14"
            android:layout_height="@dimen/space14" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space1"
        android:background="@color/colorGray2"/>

</LinearLayout>