<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bankCard_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/bankCard_icon"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_zhaoshangyinhang"
                android:layout_width="@dimen/space30"
                android:layout_height="@dimen/space30" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bankCard_Name"
                    android:text="招商银行"
                    android:textSize="@dimen/font14"
                    android:textStyle="bold"
                    android:textColor="@color/colorGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/bankCard_type"
                    android:text="储蓄卡"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/colorGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginLeft="@dimen/space5"
                    android:layout_marginRight="@dimen/space5"/>


                <TextView
                    android:id="@+id/bankCard_id"
                    android:text="(0036)"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/colorGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:maxLength="20"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space5">

                <TextView
                    android:text="2小时内到账"
                    android:textSize="@dimen/font12"
                    android:textColor="@color/colorGray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space1"
        android:background="@color/colorGray2"/>



</LinearLayout>